.confirm_main>view:nth-child(4) {
  color: #676767;
  font-size: 34rpx;
}

.confirm_main>view:nth-child(2) {
  color: #ef8226;
  margin-bottom: 50rpx;
  font-size: 34rpx;
}

.confirm_main>view:nth-child(2) text {
  color: #ef8226;
  font-size: 36rpx;
}

.confirm_main>view:nth-child(3) {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.confirm_main>view:last-child {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 140rpx;
}

.confirm_main>view:last-child view, .confirm_main>view:last-child button {
  position: relative;
  margin: 0 10rpx;
}

.confirm_main>view:last-child view image,
.confirm_main>view:last-child button image {
  width: 222rpx;
  height: 70rpx;
}

.confirm_main>view:last-child view text,
.confirm_main>view:last-child button text {
  position: absolute;
  left: 0;
  top: 18%;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 32rpx;
}

