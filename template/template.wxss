.confirm, .signin, .ruleDec, .bandPhone, .auth {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.confirm_bg {
  width: 525rpx;
  height: 551rpx;
}

.confirm_bg2 {
  width: 525rpx;
  height: 625rpx;
}

.confirm_box {
  width: 525rpx;
  height: 551rpx;
  position: absolute;
  top: 150rpx;
  left: 50%;
  margin-left: -254rpx;
  /* -webkit-animation: suofang linear 0.2s forwards;
  animation: suofang linear 0.2s forwards; */
}

@-webkit-keyframes suofang {
  0% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  50% {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes suofang {
  0% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  50% {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.closeBox {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 500;
}

.close1 {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.close {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 500;
}

.confirm_main, .signin_main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.confirm_main>view, .signin_main>view {
  text-align: center;
  width: 100%;
}

.confirm_main>view:first-child {
  color: #ef8226;
  margin-top: 50rpx;
  font-size: 34rpx;
}

