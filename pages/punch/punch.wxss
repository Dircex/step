/* pages/punch/punch.wxss */

.ctx {
  width: 719rpx;
  height: 850rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.change {
  width: 100%;
  text-align: center;
}

.change image {
  width: 42rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 8rpx;
}

.change text {
  font-size: 32rpx;
  color: #5e5e5e;
  display: inline-block;
  vertical-align: middle;
}

.btn {
  width: 100%;
  margin-top: 40rpx;
}

form {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn view, .btn button {
  display: inline-block;
  position: relative;
  margin: 0 30rpx;
}

.btn view image, .btn button image {
  width: 283rpx;
  height: 89rpx;
}

.btn view text, .btn button text {
  width: 100%;
  text-align: center;
  color: white;
  font-size: 32rpx;
  position: absolute;
  left: 0;
  top: 20%;
}

.hint {
  width: 100%;
  text-align: center;
  color: #a7a7a7;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.remind {
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}

.remind view, .remind text {
  display: inline-block;
  vertical-align: middle;
}

.circle, .remind view {
  width: 39rpx;
  height: 39rpx;
  position: relative;
}

.remind text {
  font-size: 28rpx;
  color: gray;
  margin-left: 5rpx;
}

.gou {
  width: 30rpx;
  height: 21rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -15rpx;
  margin-top: -10rpx;
}
