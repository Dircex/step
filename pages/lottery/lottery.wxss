/**index.wxss**/

.content {
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.item {
  width: 750rpx;
  height: auto;
  position: relative;
  overflow: visible;
  margin-bottom: 30rpx;
}

.body {
  width: 724rpx;
  height: auto;
  border-radius: 16rpx;
  overflow: hidden;
  margin-left: 13rpx;
  box-shadow: 0px 0px 3px 3px #e5e5e5;
  padding-bottom: 10rpx;
}

.imgBox {
  width: 724rpx;
  height: 325rpx;
  overflow: hidden;
}

.imgBox image {
  width: 100%;
  height: 100%;
}

.item-text-view {
  font-size: 32rpx;
  text-align: left;
  padding: 8rpx 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}

.item-view {
  position: relative;
  text-align: left;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.item-view text:nth-child(3){
  color: #f04a81;
  margin-left:-23rpx;
}
.nop {
  display: inline-block;
}

.item-view text, .nop {
  font-size: 28rpx;
  color: #9e9e9e;
  margin-right: 30rpx;
}

.nop text {
  color: #f04a81;
}

.status {
  width: 161rpx;
  height: 48rpx;
  position: absolute;
  right: 10rpx;
  top: 0;
}

.status image {
  width: 161rpx;
  height: 48rpx;
}

.status text {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  color: white;
  text-align: center;
  line-height: 48rpx;
}

.empty {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  color: gray;
}
