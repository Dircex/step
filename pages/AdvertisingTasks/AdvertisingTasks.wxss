.getallBox {
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgb(1, 18, 248);
  margin: 40rpx 0 30rpx;
}

.temp {
  width: 224rpx;
  height: 260rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  color: #DFDFDF;
  background-color: #fff;
}

.temp image {
  height: 100%;
  width: 100%;
}

.temp text {
  position: absolute;
  top: 45%;
  left: 48%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  color: #FFAF00;
  font-size: 56rpx;
}

.border {
  width: 90%;
  height: 2rpx;
  background-color: rgb(231, 231, 231);
  margin: 0 auto;
}