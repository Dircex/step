.callFriend .Num {
  color: #FF6211;
  font-size: 34rpx;
}

button {
  width: 100%;
  height: 124rpx;
  line-height: 124rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
}

/* button image {
  position: absolute;
  top: 0;  left: 0;
} */

button[plain] {
  border: none;
  border-top: 2rpx solid #ccc;
  background-color: #28C5CF;
  letter-spacing: 2rpx;
  color: #fff;
}

button text {
  width: 100%;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  top: 48%;  left: 50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
}

.TasksLogo {
  /* border-top: 2rpx solid #ccc; */
  width: 747rpx;
  height: 331rpx;
  padding-top: 20rpx;
}

.friendListBox {
  height: 58rpx;
}

.friendList {
  width: 88%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 10rpx auto 10rpx;
}
.frienditem {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  margin: 6rpx;
  /* background-color: #50A9E0; */
}

.frienditem image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

