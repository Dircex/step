.presentBtn {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.presentBtn image {
  width: 438rpx;
  height: 128rpx;
}

.presentBtn text {
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #78420d;
}

.success {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.success>image {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 15%;
}

.success>view {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
}

.success>view:nth-child(2) {
  font-size: 32rpx;
  top: 48%;
}

.success>view:nth-child(3) {
  font-size: 24rpx;
  top: 58%;
}

swiper {
  width: 100%;
  height: 136rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.gift {
  padding: 15rpx 0;
  box-sizing: border-box;
  width: 100%;
}

.gift_title {
  margin: 5rpx 0 10rpx 20rpx;
  box-sizing: border-box;
}

.gift_title text {
  color: #2e2e2e;
  font-size: 28rpx;
  margin-left: 10rpx;
  display: inline-block;
  vertical-align: middle;
}

.rect {
  width: 11rpx;
  height: 35rpx;
  display: inline-block;
  vertical-align: middle;
}

.giftBg {
  width: 365rpx;
  height: 578rpx;
}

.giftItem {
  position: relative;
  display: inline-block;
  text-align: center;
  width: 50%;
}

.itemBox {
  width: 92%;
  height: 100%;
  position: absolute;
  left: 4%;
  top: 0;
}

.itemBox>image {
  width: 336rpx;
  height: 336rpx;
  margin-top: 14rpx;
}

.title {
  width: 90%;
  color: #292929;
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 5%;
  margin-bottom: 15rpx;
  text-align: left;
}

.gift_detail {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #c1c1c1;
}

.gift_detail>view:first-child {
  color: #5fd0e2;
}

.exchangeBtn {
  width: 198rpx;
  height: 62rpx;
  position: absolute;
  left: 50%;
  bottom: 46rpx;
  transform: translateX(-50%);
}

.exchangeBtn image {
  width: 198rpx;
  height: 62rpx;
}

.exchangeBtn view {
  width: 100%;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  color: white;
}