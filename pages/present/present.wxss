/**index.wxss**/
@import "/template/template.wxss";

.main {
  width: 750rpx;
  height: 614rpx;
  position: relative;
}

.mainBg {
  width: 750rpx;
  height: 614rpx;
}

.login {
  background-color: #17bac9;
  font-size: 32rpx;
  color: white;
  display: inline-block;
  padding: 6rpx 10rpx;
  margin-top: 50%;
  transform: translateY(-50%);
  border-radius: 10rpx;
  position: relative;
}

.myStep {
  width: 304rpx;
  height: 304rpx;
  position: absolute;
  left: 10%;
  top: 6%;
}

.friendStep {
  width: 225rpx;
  height: 225rpx;
  position: absolute;
  right: 10%;
  top: 12%;
}

.myStep image, .friendStep image {
  width: 100%;
  height: 100%;
}

.myStep view, .friendStep view {
  position: absolute;
  width: 100%;
  text-align: center;
}

.myStep view:nth-child(2) {
  color: #3d3d3d;
  top: 25%;
  font-size: 30rpx;
}

.myStep view:nth-child(3) {
  color: #10858c;
  top: 37%;
  font-size: 60rpx;
}

.myStep view:nth-child(4) {
  color: #89877c;
  top: 63%;
  font-size: 28rpx;
}

.friendStep view:nth-child(2) {
  color: #3d3d3d;
  top: 20%;
  font-size: 28rpx;
}

.friendStep view:nth-child(3) {
  color: #10858c;
  top: 37%;
  font-size: 46rpx;
}

.friendStep view:nth-child(4) {
  color: #89877c;
  top: 63%;
  font-size: 24rpx;
}

.present {
  width: 100%;
  position: absolute;
  bottom: 32%;
  text-align: center;
  color: white;
  font-size: 32rpx;
}

.present input {
  display: inline-block;
  width: 20%;
  border-bottom: 1px solid white;
  text-align: center;
}

.hint {
  color: white;
  font-size: 24rpx;
  position: absolute;
  bottom: 25%;
  left: 0;
  width: 100%;
  text-align: center;
}

.hint text {
  color: #386ffd;
}

