.userInfo {
  width: 750rpx;
  height: 337rpx;
  position: relative;
  top: -15rpx;
  left: 0;
}

.userInfo image {
  width: 750rpx;
  height: 337rpx;
  position: absolute;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  position: absolute;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  overflow: hidden;
}

.nickname {
  position: absolute;
  top: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  font-size: 16px;
  color: white;
}

.info {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  bottom: 30rpx;
}

.info view {
  font-size: 28rpx;
  color: white;
}

.info view text {
  font-size: 32rpx;
}

.list {
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: -15rpx;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.item {
  text-align: center;
}

.item view {
  font-size: 32rpx;
}

.myEx {
  width: 48rpx;
  height: 48rpx;
}

.strategy {
  width: 50rpx;
  height: 49rpx;
}

.punch {
  width: 50rpx;
  height: 46rpx;
}

.centerItem {
  height: 98rpx;
  background-color: white;
  position: relative;
  line-height: 90rpx;
  text-align: left;
}

.centerItem image, .centerItem text {
  vertical-align: middle;
}

/* 
