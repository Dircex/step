.center_coll {
  width: 49rpx;
  height: 46rpx;
}

.centerItem image:first-child {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.jian {
  width: 18rpx;
  height: 32rpx;
  position: absolute;
  right: 39rpx;
  top: 36rpx;
}

.text {
  font-size: 32rpx;
  color: #313131;
}

.line {
  border-bottom: 1px #dcdcdc solid;
}

.address {
  width: 35rpx;
  height: 39rpx;
}

.problem {
  width: 40rpx;
  height: 40rpx;
}

.contact {
  width: 44rpx;
  height: 36rpx;
}

.img {
  width: 70rpx;
  text-align: center;
  display: inline-block;
  margin-right: 18rpx;
}

.record {
  width: 40rpx;
  height: 40rpx;
}

.bd_phone {
  width: 194rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 10%;
  left: 0;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background-color: rgba(0, 0, 0, .2);
  z-index: 99999;
}

.bd_phone image {
  width: 25rpx;
  height: 39rpx;
  position: relative;
}

.bd_phone text {
  font-size: 24rpx;
  color: #fff;
  line-height: 60rpx;
  margin-left: 10rpx;
}