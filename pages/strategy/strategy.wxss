/* pages/problem/problem.wxss */

.mjProblemMax {
  position: absolute;
  left: 0;
  top: 0;
  margin: 14px;
  border-radius: 3px;
}

.mjProblemMax .mjProblem {
  width: 100%;
  height: 1100rpx;
}

.mjProblemMax .mjProblem .title {
  font-size: 32rpx;
  padding: 14px 0 0 0;
}

.mjProblemMax .mjProblem .about {
  font-size: 28rpx;
  line-height: 24px;
  padding: 9px 0 9px 0;
}

.mjProblemMax .mjProblem .about:last-child {
  padding-bottom: 14px;
}
